#include <stdlib.h>
#include <time.h>

/* more headers goes there */
#include <stdio.h>
/* betty style doc for function main goes there */
/**
 * This is the entry point of the programme
 *
 * Return: This default a value of 0
 */ 
int main(void)
{
int n;
int rand(void);
int RAND_MAX;
srand(time(0));  
n = rand(void) - RAND_MAX / 2;  
if (n > 0)
printf("%d is positive\n", n);
else if (n == 0)
printf("%d is zero\n", n);
else if (n < 0)
printf("%d is negative\n", n);         
return (0);  
}
